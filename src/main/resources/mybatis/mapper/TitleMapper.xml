<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dawn.aiwriter.mapper.SummaryMapper">
    <resultMap type="com.dawn.aiwriter.entity.Title" id="titleResult">
        <result property="titleId"    column="title_id"    />
        <result property="title"    column="title"    />
        <result property="articleId"    column="article_id"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="delFlag"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectSummaryList" parameterType="com.dawn.aiwriter.entity.Article" resultMap="titleResult">
        select title_id,title,article_id,status,del_flag,create_time,update_time
        from title
        where article_id = #{articleId}
    </select>

    <insert id="insertSummary">
        insert into title(
                title_id
                title
                article_id
                status
                del_flag
                create_time
                update_time
                )
        values (
                #{titleId}
                #{title}
                #{articleId}
                #{status}
                #{delFlag}
                #{createTime}
                #{updateTime}
                       )
    </insert>
</mapper>
